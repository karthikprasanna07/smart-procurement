<?xml version="1.0" encoding="UTF-8"?>

<!--
    Vendor Report Template

    This JRXML defines the layout and structure
    of the Vendor PDF report.
-->

<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="vendor_report"
              pageWidth="595"
              pageHeight="842"
              columnWidth="515"
              leftMargin="40"
              rightMargin="40"
              topMargin="50"
              bottomMargin="50">

    <!-- ========================================================= -->
    <!-- PARAMETERS                                                -->
    <!-- Used to pass dynamic values like report title             -->
    <!-- ========================================================= -->

    <parameter name="REPORT_TITLE" class="java.lang.String"/>
    <parameter name="GENERATED_DATE" class="java.lang.String"/>
    <parameter name="GENERATED_BY" class="java.lang.String"/>


    <!-- ========================================================= -->
    <!-- FIELDS                                                    -->
    <!-- These MUST match VendorReportDTO getters                  -->
    <!-- Example: getName() â†’ field name="name"                    -->
    <!-- ========================================================= -->

    <field name="id" class="java.lang.Long"/>
    <field name="name" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="phone" class="java.lang.String"/>
    <field name="status" class="java.lang.String"/>

    <!-- ========================================================= -->
    <!-- TITLE SECTION                                             -->
    <!-- Appears ONCE at the start of the report                   -->
    <!-- ========================================================= -->

    <title>
        <band height="50">
            <textField>
                <reportElement x="0" y="10" width="515" height="30"/>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true"/>
                </textElement>
                <textFieldExpression>
                    <![CDATA[$P{REPORT_TITLE}]]>
                </textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- ========================================================= -->
    <!-- PAGE HEADER                                               -->
    <!-- Appears on EVERY page                                     -->
    <!-- ========================================================= -->

    <pageHeader>
        <band height="40">

            <!-- Generated Date -->
            <textField>
                <reportElement x="0" y="0" width="300" height="15"/>
                <textFieldExpression>
                    <![CDATA["Generated On : " + $P{GENERATED_DATE}]]>
                </textFieldExpression>
            </textField>

            <!-- Generated By -->
            <textField>
                <reportElement x="0" y="18" width="300" height="15"/>
                <textFieldExpression>
                    <![CDATA["Generated By : " + $P{GENERATED_BY}]]>
                </textFieldExpression>
            </textField>

        </band>
    </pageHeader>


    <!-- ========================================================= -->
    <!-- COLUMN HEADER (Table headings)                             -->
    <!-- Appears ONCE per page before data rows                    -->
    <!-- ========================================================= -->

    <columnHeader>
        <band height="20">

            <staticText>
                <reportElement x="0" y="0" width="50" height="20"/>
                <text><![CDATA[ID]]></text>
            </staticText>

            <staticText>
                <reportElement x="60" y="0" width="120" height="20"/>
                <text><![CDATA[Name]]></text>
            </staticText>

            <staticText>
                <reportElement x="190" y="0" width="150" height="20"/>
                <text><![CDATA[Email]]></text>
            </staticText>

            <staticText>
                <reportElement x="350" y="0" width="80" height="20"/>
                <text><![CDATA[Status]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ========================================================= -->
    <!-- DETAIL SECTION (Table data rows)                           -->
    <!-- Repeats for EACH Vendor                                   -->
    <!-- ========================================================= -->

    <detail>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="50" height="20"/>
                <textFieldExpression><![CDATA[$F{id}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="60" y="0" width="120" height="20"/>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="190" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="350" y="0" width="80" height="20"/>
                <textFieldExpression><![CDATA[$F{status}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ========================================================= -->
    <!-- PAGE FOOTER                                               -->
    <!-- Appears on EVERY page                                     -->
    <!-- ========================================================= -->

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="400" y="0" width="100" height="20"/>
                <textFieldExpression>
                    <![CDATA["Page " + $V{PAGE_NUMBER}]]>
                </textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
